<script type="text/javascript">
    function HidePopup() {
        $("#dvAdd").hide();
        $("#dvList").show();
    }

    function UniversityDetailPartial(val) {
        $("#divLoading").show();
        $.ajax({
            type: "GET",
            url: '/University/UniversityDetailPartial',
            cache: false,
            contentType: "application/html; charset=UTF-8;",
            dataType: "html",
            data: { universityid: val },
            success: function (partialView) {
                $("#divLoading").hide();
                $('#dvUniversityDetailPartial').html(partialView);
                $("#dvAdd").show();
                $("#dvList").hide();
                if (val != '0') {
                    $("#spnHeader").text('Edit University');
                    $("#btnsubmit").text('Update');
                }
                else {
                    $("#spnHeader").text('Add University');
                    $("#btnsubmit").text('Save');
                }
            },
            error: function (partialView) {
                $("#divLoading").hide();
                $('#dvUniversityDetailPartial').html(partialView);
                $("#dvAdd").hide();
                $("#dvList").show();
            }
        });
    }

    function CheckValidation() {
        var countVal = 0;
        var mailformat = /^\w+([\.-]?\w+)*@@\w+([\.-]?\w+)*(\.\w{2,3})+$/;
        var UniversityName = $('#UniversityName').val();
        var Email = $('#Email').val();
        var Phone = $('#Phone').val();
        var City = $('#City').val();
        var State = $('#State').val();
        var Country = $('#Country').val();

        if (UniversityName == "") {
            toastr.error("University Name is Required!");
            document.getElementById('UniversityName').focus();
            countVal++;
        }
        else if (Email == "") {
            toastr.error("Email is Required!");
            document.getElementById('Phone').focus();
            countVal++;
        }
        else if (Phone == "") {
            toastr.error("Phone is Required!");
            document.getElementById('Phone').focus();
            countVal++;
        }
        else if (City == "") {
            toastr.error("City is Required!");
            document.getElementById('City').focus();
            countVal++;
        }
        else if (State == "") {
            toastr.error("State is Required!");
            document.getElementById('State').focus();
            countVal++;
        }
        else if (Country == "") {
            toastr.error("Country is Required!");
            document.getElementById('Country').focus();
            countVal++;
        }
        else if (Email != "") {
            if (Email.match(mailformat)) {
                document.getElementById('Email').focus();
            }
            else {
                toastr.error("You have entered an invalid email address!");
                countVal = 1;
            }
        }

        if (countVal != 0) {
            return false;
        }
        else {
            return true;
        }
    }

    function SaveData() {
        flag = CheckValidation();
        if (flag == true) {

            var ImageName = '';
            var ImageFullPath = '';
            if ($("#UploadImage").val() !== '') {
                ImageFullPath = $("#UploadImage").val();

            }
            if (ImageFullPath === '') {
                ImageFullPath = $("#iImageURL").attr('src');
            }
            if (ImageFullPath !== undefined && ImageFullPath !== '') {
                if (ImageFullPath.length > 0) {
                    ImageFullPath = ImageFullPath.replace(/[/]/g, '\\');
                    var splitImageFullPath = ImageFullPath.split("\\");
                    var lastIndex = splitImageFullPath.length;
                    ImageName = splitImageFullPath[lastIndex - 1];

                    var fileUpload = $("#UploadImage").get(0);
                    var files = fileUpload.files;

                    // Create FormData object
                    var fileData = new FormData();

                    // Looping over all files and add it to FormData object
                    for (var i = 0; i < files.length; i++) {
                        fileData.append(files[i].name, files[i]);
                    }

                    $.ajax({
                        //url: '/Educational/UploadFiles',
                        url: '/University/UploadFiles',
                        type: "POST",
                        contentType: false, // Not to set any content header
                        processData: false, // Not to process data
                        data: fileData,
                        success: function (result) {
                            //alert(result);
                        },
                        error: function (err) {
                            alert(err.statusText);
                        }
                    });
                }
            }

            var isActive = false;
            if ($("#IsActive option:selected").val() === "1") {
                isActive = true;
            }

            var UNI = new Object();
            UNI.UniversityId = $('#UniversityId').val();
            UNI.UniversityName = $('#UniversityName').val();
            UNI.Address = $('#Address').val();
            UNI.Country = $('#Country').val();
            UNI.State = $('#State').val();
            UNI.City = $('#City').val();
            UNI.UniversityLogo = $('#UniversityLogo').val();
            UNI.Email = $('#Email').val();
            UNI.Phone = $('#Phone').val();
            UNI.PrimaryPhone = $('#PrimaryPhone').val();
            UNI.SecondaryPhone = $('#SecondaryPhone').val();
            UNI.LeadSource = $('#LeadSource').val();
            UNI.IsActive = isActive;
            UNI.IsDeleted = false;

            $("#divLoading").show();
            $.ajax({
                type: 'POST',
                url: '/University/OperationUniversity',
                data: JSON.stringify(UNI),
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                success: function (response) {
                    if (response.success == true) {
                        location.reload();
                        // toastr.success(response.responseText);
                        toastr.success("Saved Successfully");
                    }
                    else {
                        toastr.error(response.responseText);
                    }
                    $("#divLoading").hide();
                },
                error: function (response) {
                    $("#divLoading").hide();
                    toastr.success(response.responseText);
                }
            });
        }
    }

    function deleteUniversity(val) {
        $("#divLoading").show();
        var confirmation = confirm("Are you sure you want to Delete?");
        if (confirmation) {
            var UNI = new Object();
            UNI.UniversityId = val;
            $("#divLoading").show();
            $.ajax({
                type: "POST",
                url: '/University/DeleteUniversity',
                cache: false,
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                data: JSON.stringify(UNI),
                success: function (response) {
                    if (response.success == true) {
                        location.reload();
                        toastr.success(response.responseText);
                    }
                    else {
                        toastr.error(response.responseText);
                    }
                    $("#divLoading").hide();
                },
                error: function (response) {
                    $("#divLoading").hide();
                    toastr.success(response.responseText);
                }
            });
        }
        $("#divLoading").hide();
    }

